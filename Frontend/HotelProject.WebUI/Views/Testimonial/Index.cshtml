@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görsel</th>
        <th>Referans Adı</th>
        <th>Referans Unvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialID</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.TestimonialID/" class="btn btn-outline-danger">SİL</a></td>
            <td><a href="/Staff/UpdateStaff/@item.TestimonialID/" class="btn btn-outline-success">GÜNCELLE</a></td>
            <td><a href="#" class="btn btn-outline-dark">DETAYLAR</a></td>
        </tr>

    }
</table>

<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Girişi</a>



