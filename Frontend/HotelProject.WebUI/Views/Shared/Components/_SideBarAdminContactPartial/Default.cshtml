<div class="mail-list mt-4">
    <a href="/AdminContact/Inbox/" class="list-group-item border-0  p-r-0">
        <i class="fa fa-inbox font-18 align-middle mr-2"></i> Gelen Kutusu
        <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.contactCount</span>
    </a>
    <a href="/AdminContact/SendBox/" class="list-group-item border-0 p-r-0">
        <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu
        @if (ViewBag.sendMessageCount == null)
        {
            <span class="badge badge-success badge-sm float-right m-t-5">0</span>

        }
        else {
            <span class="badge badge-success badge-sm float-right m-t-5">@ViewBag.sendMessageCount</span>

        }
      
    </a>
    <a href="#" class="list-group-item border-0 p-r-0">
        <i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli
        <span class="badge badge-danger badge-sm float-right m-t-5">47</span>
    </a>
    <a href="#" class="list-group-item border-0 p-r-0">
        <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslaklar
        <span class="badge badge-warning badge-sm float-right m-t-5">47</span>
    </a>
    <a href="#" class="list-group-item border-0 p-r-0">
        <i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu
        <span class="badge badge-dark badge-sm float-right m-t-5">47</span>
    </a>
</div>